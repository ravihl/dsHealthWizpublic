<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Integration Status</label>
    <pluralLabel>Integration Statuses</pluralLabel>
    <nameField>
        <label>Integration Name</label>
        <type>Text</type>
    </nameField>
    <deploymentStatus>Deployed</deploymentStatus>
    <sharingModel>ReadWrite</sharingModel>

    <!-- Integration Name -->
    <fields>
        <fullName>Integration_Name__c</fullName>
        <label>Integration Name</label>
        <type>Text</type>
        <length>255</length>
        <required>true</required>
    </fields>

    <!-- Status Picklist -->
    <fields>
        <fullName>Status__c</fullName>
        <label>Status</label>
        <type>Picklist</type>
        <valueSet>
            <valueSetDefinition>
                <sorted>false</sorted>
                <value>
                <fullName>Healthy</fullName>
                </value>
                <value>
                  <fullName>Success</fullName>
                </value>
                <value>
                  <fullName>Warning</fullName>
                </value>
                <value>
                  <fullName>Error</fullName>
                </value>
                <value>
                  <fullName>Failed</fullName>
                </value>
                <value>
                  <fullName>Disconnected</fullName>
                </value>
            </valueSetDefinition>
        </valueSet>
    </fields>

    <!-- Last Success -->
    <fields>
        <fullName>Last_Success__c</fullName>
        <label>Last Success</label>
        <type>DateTime</type>
    </fields>

    <!-- Error Count -->
    <fields>
        <fullName>Error_Count__c</fullName>
        <label>Error Count</label>
        <type>Number</type>
        <precision>18</precision>
        <scale>0</scale>
        <defaultValue>0</defaultValue>
    </fields>

    <!-- Response Time -->
    <fields>
        <fullName>Response_Time__c</fullName>
        <label>Response Time (ms)</label>
        <type>Number</type>
        <precision>18</precision>
        <scale>2</scale>
    </fields>

    <!-- Endpoint -->
    <fields>
        <fullName>Integration_Endpoint__c</fullName>
        <label>Integration Endpoint</label>
        <type>Url</type>
    </fields>

    <!-- Owner -->
    <fields>
        <fullName>Owner__c</fullName>
        <label>Integration Owner</label>
        <type>Lookup</type>
        <referenceTo>User</referenceTo>
        <relationshipLabel>Integration Owner</relationshipLabel>
        <relationshipName>Integration_Owner</relationshipName>
    </fields>

    <!-- Notes -->
    <fields>
        <fullName>Notes__c</fullName>
        <label>Notes</label>
        <type>LongTextArea</type>
        <length>32768</length>
        <visibleLines>5</visibleLines>
    </fields>
</CustomObject>
